def youdied():
  os.system('cls' if os.name == 'nt' else 'clear')
  youdied = "You Died."
  print(youdied)
  for char in youdied:
    sleep(0.4)
    sys.stdout.write(char)
    sys.stdout.flush()
    restart = "You may restart if you wish."
  for char in restart:
      sleep(0.4)
      sys.stdout.write(char)
      sys.stdout.flush()
      quit()
